[alias]
	st = status
	ci = commit
	co = checkout
	cob = checkout -b
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
	ff = merge --ff-only
	puff = pull --ff-only
	noff = merge --no-ff
	fa = fetch --all
	rup = remote update --prune
	pom = push origin master --tags
	pod = push origin develop
	b = branch -vv
	ds = diff --stat=160,120
	dh1 = diff HEAD~1
	sv = semver-tags
	# for `hub`
	pr = pull-request

	# Divergence (commits we added and commits remote added)
	div = divergence

	# Fancy logging.
	#   h = head
	#   hp = head with patch
	#   r = recent commits, only current branch
	#   ra = recent commits, all reachable refs
	#   l = all commits, only current branch
	#   la = all commits, all reachable refs
	head = !git l -1
	h = !git head
	hp = "!. ~/.githelpers && show_git_head"
	r = !git l -20
	ra = !git r --all
	l = "!. ~/.githelpers && pretty_git_log"
	la = !git l --all
[credential]
	helper = osxkeychain
[core]
	excludesfile = /Users/adamc/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[user]
	name = Adam Cardenas
	email = cevaris@gmail.com
[push]
	default = current
[merge]
	tool = opendiff
